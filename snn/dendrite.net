### dendrite.net
# neuron groups
g 4 log_v=1

# neurons
n 0.0 taps=3 threshold=100
# dendrite compartments
# g.n.d  (group.neuron.dendrite)
n 0.0:0 time_constant=0.8
n 0.0:1 time_constant=0.8
n 0.0:2 time_constant=0.7

n 0.1 bias=0.0 threshold=1.0 connections_out=1
n 0.2 bias=0.0 threshold=1.0 connections_out=1
n 0.3 bias=0.1 threshold=2.0 connections_out=1

#  n(0.3)         n(0.2)         n(0.1)
#    |              |              |
#   \ /            \ /            \ /
# n(0.0:2) <---> n(0.0:1) <---> n(0.0:0) proximal
#                                  |
#                                 \ /
#                                n(0.0)

# Connections between neurons
e 0.1->0.0:0 weight=10
e 0.2->0.0:1 weight=10
e 0.3->0.0:2 weight=10

# Branches between dendrite compartments
e 0.0:2->1 space_constant=0.2
e 0.0:1->2 space_constant=0.2
e 0.0:1->0 space_constant=0.1
e 0.0:0->1 space_constant=0.1

## Map everything to one core
&   0.0@0.0
&   0.1@0.0
&   0.2@0.0
&   0.3@0.0
